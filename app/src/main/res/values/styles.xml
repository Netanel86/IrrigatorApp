<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ValveRadioButton">
        <item name="android:background">@drawable/btn_valve_background_selector</item>
        <item name="android:button">@drawable/valve_btn</item>
        <item name="android:drawableBottom">@drawable/btn_valve_state_selector</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/btn_valve_text_color</item>
        <item name="android:textAlignment">center</item>
</style>
    <style name="SeekBarRelativeTextView" parent="Widget.AppCompat.TextView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/textview_rel_val_text_color</item>
    </style>

</resources>