<resources>
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="ManualFrag.SimpleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/tv_pressable_text_color_selector</item>
    </style>

    <style name="ManualFrag.TimeTextView" parent="ManualFrag.SimpleTextView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">@dimen/text_headline5</item>
    </style>
</resources>