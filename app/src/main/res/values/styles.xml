<resources>
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="ManualFrag.SimpleTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/tv_pressable_text_color_selector</item>
    </style>

    <style name="ManualFrag.TimeTextView" parent="ManualFrag.SimpleTextView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">@dimen/text_headline5</item>
    </style>

    <style name="Custom.ShapeAppearanceOverlay.MaterialButton.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <style name="Custom.MaterialComponents.Button.Rounded" parent="Widget.MaterialComponents.Button">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="shapeAppearanceOverlay">@style/Custom.ShapeAppearanceOverlay.MaterialButton.Rounded</item>
    </style>

    <style name="Custom.MaterialComponents.TimeStampButton" parent="Custom.MaterialComponents.Button.Rounded">
        <item name="android:layout_width">@dimen/radius_round_button</item>
        <item name="android:layout_height">@dimen/radius_round_button</item>
        <item name="backgroundTint">@color/color_primary_dark</item>
    </style>
</resources>